<% @cosme = Cosme.find(favorite.cosme_id) %>
<% user = @cosme.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-cosme">
    <div class="col-md-2">
      <%= link_to((image_tag @cosme.picture.url), cosme_path(@cosme), class: 'cosme-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @cosme.name, cosme_path(@cosme) %></p>
      <p><%= @cosme.description %></p>
      <p class="cosme-user">by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>