<% user = User.find(notification.from_user_id) %>
<% cosme = Cosme.find(notification.cosme_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのコスメが<%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのコスメに<%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag cosme.picture.url), cosme_path(cosme), class: 'cosme-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to cosme.name, cosme_path(cosme) %></p>
      <p><%= cosme.description %></p>
    </div>
  </div>
</li>