<% provide(:title, "コスメ情報の編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@cosme) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
         <span class="picture">
          <%= f.label :picture %><span class="input-unneed">※任意</span>
          <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'cosme-picture' %>
          <%= image_tag(@cosme.picture.thumb400.url) if @cosme.picture.url.present? %>
          <p></p>
        </span>
        <p></p>
        <div class = 'form-group'>
          <%= f.label :name %><span class="input-need">※必須</span>
          <%= f.text_field :name, class: 'form-control', id: 'cosme_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :description %><span class="input-unneed">※任意</span>
          <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'cosme_description' %>
        </div>
        <div class="row">
          <div class="col-md-9">
            <p class="title-maker-name">メーカー（複数可）<span class="input-unneed">※任意</span></p>
          </div>
          <div class="col-md-3">
            <p class="title-maker-genre">ジャンル<span class="input-unneed">※任意</span></p>
          </div>
        </div>
        <%= f.fields_for :makers do |i| %>
          <div class="row">
            <div class="col-md-9">
              <div class = 'form-group'>
                <%= i.text_field :name, class: 'form-control maker_name' %>
              </div>
            </div>
            <div class="col-md-3">
              <div class = 'form-group'>
                <%= i.text_field :genre, class: 'form-control maker_genre' %>
              </div>
            </div>
          </div>
        <% end %>
        <div class = 'form-group'>
          <%= f.label :tips %><span class="input-unneed">※任意</span>
          <%= f.text_field :tips, size: "30x4", class: 'form-control', id: 'cosme_tips' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :reference %><span class="input-unneed">※任意</span>
          <%= f.text_field :reference, class: 'form-control', id: 'cosme_reference' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :popularity %> [1~5]<span class="input-unneed">※任意</span>
          <%= f.text_field :popularity, class: 'form-control', id: 'cosme_popularity' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <p></p>
        <%= link_to "コスメを削除する", cosme_path(@cosme), method: :delete,
                             data: { confirm: "本当にこのコスメを削除してよろしいですか？" } %>
      <% end %>
    </div>
  </div>
</div>
